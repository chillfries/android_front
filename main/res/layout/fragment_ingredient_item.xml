<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:strokeColor="?attr/colorPrimary" app:strokeWidth="1dp"
    app:cardElevation="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="6dp" android:paddingHorizontal="12dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="재료명"
            android:layout_marginEnd="4dp"
            app:boxBackgroundColor="@color/white"
            app:hintTextAppearance="@style/TextAppearance.MaterialComponents.Caption"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/input_layout_quantity"
            app:layout_constraintHorizontal_weight="1.8"
            app:boxStrokeColor="?attr/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="?attr/colorPrimary"
                android:paddingVertical="6dp" android:textSize="14sp" android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_quantity"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:hint="수량"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:boxBackgroundColor="@color/white"
            app:hintTextAppearance="@style/TextAppearance.MaterialComponents.Caption"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/input_layout_name"
            app:layout_constraintEnd_toStartOf="@id/input_layout_expiry"
            app:boxStrokeColor="?attr/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_item_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="?attr/colorPrimary"
                android:paddingVertical="6dp" android:textSize="14sp" android:inputType="number"
                android:text="1"
                android:textAlignment="center"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_expiry"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:hint="소비기한"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:boxBackgroundColor="@color/white"
            app:endIconMode="none"
            app:boxStrokeColor="?attr/colorPrimary"
            app:hintTextAppearance="@style/TextAppearance.MaterialComponents.Caption"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/input_layout_quantity"
            app:layout_constraintEnd_toStartOf="@id/input_layout_storage">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_item_expiry_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="6dp" android:textSize="14sp" android:focusable="false"
                android:clickable="true"
                app:boxStrokeColor="?attr/colorPrimary"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_storage"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:hint="저장공간"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:boxBackgroundColor="@color/white"
            app:endIconMode="none"
            app:boxStrokeColor="?attr/colorPrimary"
            app:hintTextAppearance="@style/TextAppearance.MaterialComponents.Caption"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/input_layout_expiry"
            app:layout_constraintEnd_toStartOf="@id/button_remove">

            <AutoCompleteTextView
                android:id="@+id/auto_complete_storage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="6dp" android:textSize="14sp" android:inputType="none"
                android:singleLine="true"
                android:ellipsize="end"
                tools:text="냉장"/>
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/button_remove"
            android:layout_width="24dp" android:layout_height="24dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_close"
            android:tint="@color/material_dynamic_neutral_variant90"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:clickable="true"
            android:focusable="true"
            android:padding="2dp" android:contentDescription="재료 제거"
            tools:ignore="UseAppTint" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>